{
  "name": "hugotailwind-actions",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently npm:watch:*",
    "watch:tw": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:hugo": "hugo server -D --gc",
    "build": "rm -rf public && tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css && hugo --gc --minify",
    "lint": "npm run -s lint:scripts && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js",
    "lint:markdown": "markdownlint *.md content/**/*.md"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "markdownlint-cli": "^0.32.2",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.4"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "dependencies": {
    "alpinejs": "^3.10.5"
  }
}
